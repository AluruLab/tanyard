    echo "*** $f ***"
    #cd $i
    #R_IN=$i.mas5.csv R_OUT=$i.log2.csv R --no-save < ../../submean2.R
    Rscript submean.R $i/$f.gcrma.csv $i/$f.gc.log2.csv
    #cd ..
done
